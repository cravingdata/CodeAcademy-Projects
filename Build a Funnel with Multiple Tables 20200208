--consists of binary outputs for NOT NULL as "TRUE" or 1, and NULL as "FALSE" or 0.

SELECT DISTINCT b.browse_date, b.user_id, c.user_id IS NOT NULL AS 'is_checkout', p.user_id IS NOT NULL as 'is_purchase' 
 FROM browse AS 'b'
 LEFT JOIN checkout AS 'c'
 ON c.user_id = b.user_id
 LEFT JOIN purchase AS 'p'
 ON p.user_id = c.user_id
 LIMIT 50; 

--finding percentage 

WITH funnels AS (
  SELECT DISTINCT b.browse_date,
     b.user_id,
     c.user_id IS NOT NULL AS 'is_checkout',
     p.user_id IS NOT NULL AS 'is_purchase'
  FROM browse AS 'b'
  LEFT JOIN checkout AS 'c'
    ON c.user_id = b.user_id
  LEFT JOIN purchase AS 'p'
    ON p.user_id = c.user_id)
SELECT COUNT(*) AS 'num_browse', 
   SUM(is_checkout) AS 'Sum of Checkout', 
   SUM(is_purchase) AS 'Sum of Purchase', 
   1.0 * SUM(is_checkout) / COUNT(user_id), 
   1.0 * SUM(is_purchase)/ SUM(is_checkout)
FROM funnels;
